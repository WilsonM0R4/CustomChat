<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:crop="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilson.customchat.commons.ImageCropperActivity">

    <com.isseiaoki.simplecropview.CropImageView
        android:id="@+id/imageCropper"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        crop:scv_crop_mode="fit_image"
        crop:scv_handle_color="@color/colorAccent"
        crop:scv_guide_color="@color/colorAccent"
        crop:scv_frame_color="@color/colorAccent"
        crop:scv_handle_size="14dp"
        crop:scv_touch_padding="10dp"
        crop:scv_handle_show_mode="show_always"
        crop:scv_guide_show_mode="show_always"
        crop:scv_min_frame_size="80dp"
        crop:scv_frame_stroke_weight="2dp"
        crop:scv_guide_stroke_weight="2dp"/>

</RelativeLayout>
