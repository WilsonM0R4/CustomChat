<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNoBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/actions_container"
        android:padding="24dp">

        <TextView android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:text="Title here" />

        <LinearLayout android:id="@+id/custom_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="300dp"
            android:minHeight="40dp"
            android:layout_below="@+id/dialog_title"
            android:paddingBottom="24dp">

            <TextView android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message here"/>

        </LinearLayout>


    </RelativeLayout>

    <!--SurfaceView android:id="@+id/buttons_surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /-->


    <RelativeLayout android:id="@+id/actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stateListAnimator="@null"
                android:background="@color/colorNoBackground"
                android:textColor="@color/colorAccent"
                android:text="@string/cancel"/>

            <Button android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stateListAnimator="@null"
                android:background="@color/colorNoBackground"
                android:textColor="@color/colorAccent"
                android:text="@string/accept"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>