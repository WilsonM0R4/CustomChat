<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wilson.customchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.hardware.camera2" />
    <!-- uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" / -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CustomChatApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.porfile.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".commons.ImageCropperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".commons.CropImageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".home.chats.ChatActivity" />
        <activity android:name=".SplashActivity" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>